<Window x:Class="CheckSLATStatusOfMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check SLAT capability of a machine" Height="350" Width="525" Background="Black" Foreground="White"
        WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <StackPanel >
        <Button Content="Click To Check" Name="BtnCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Width="192" Height="45" Click="BtnCheck_Click" Background="White" Foreground="Black" FontWeight="ExtraBold" FontSize="20" Margin="164,10,163,0"/>
            <TextBlock Name="Details" TextAlignment="Center" FontSize="16" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="220" Width="498" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="White" Foreground="Black" Margin="10,20,10,20" />
        </StackPanel>
    </Grid>
</Window>
